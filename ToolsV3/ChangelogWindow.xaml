<Window x:Class="ToolsV3.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolsV3"
        mc:Ignorable="d"
        Icon="./Resources/favicon.ico"
        Title="Changelog" Height="550" Width="600" WindowStartupLocation="CenterScreen" Initialized="Window_Initialized" Loaded="Window_Loaded">
    <DockPanel>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="16">
            Changelog
        </Label>
        <TextBox x:Name="ChangelogTextBox" DockPanel.Dock="Top"
                 IsReadOnly="True" Text="Downloading changelog..." FontFamily="Lucida Console" VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
